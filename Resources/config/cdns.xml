<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oryzone_media_storage.cdns.local.class">Oryzone\Bundle\MediaStorageBundle\Cdn\LocalCdn</parameter>
        <parameter key="oryzone_media_storage.cdns.remote.class">Oryzone\Bundle\MediaStorageBundle\Cdn\RemoteCdn</parameter>
    </parameters>

    <services>
        <!-- oryzone_media_storage.cdns.local -->
        <service id="oryzone_media_storage.cdns.local" class="%oryzone_media_storage.cdns.local.class%">
            <tag name="oryzone_media_storage_cdn" alias="local"/>
        </service>

        <!-- oryzone_media_storage.cdns.remote -->
        <service id="oryzone_media_storage.cdns.remote" class="%oryzone_media_storage.cdns.remote.class%">
            <tag name="oryzone_media_storage_cdn" alias="remote"/>
        </service>
    </services>

</container>
