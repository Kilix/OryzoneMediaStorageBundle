<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oryzone_media_storage.persistence.null.class">Oryzone\MediaStorage\Persistence\NullPersistenceAdapter</parameter>
        <parameter key="oryzone_media_storage.persistence.doctrine.class">Oryzone\Bundle\MediaStorageBundle\Persistence\DoctrinePersistenceAdapter</parameter>
    </parameters>

    <services>
        <!-- NullPersistenceAdapter -->
        <service id="oryzone_media_storage.persistence.null" class="%oryzone_media_storage.persistence.null.class%">
        </service>

        <!-- DoctrinePersistenceAdapter -->
        <service id="oryzone_media_storage.persistence.doctrine" class="%oryzone_media_storage.persistence.doctrine.class%">
            <parameter type="service" id="oryzone_media_storage.persistence.doctrine.object_manager"/>
        </service>

        <!-- Sets DoctrinePersistenceAdapter as the default one -->
        <service id="oryzone_media_storage.persistence" alias="oryzone_media_storage.persistence.doctrine">
        </service>
    </services>

</container>
