<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oryzone_media_storage.event_dispatcher_adapter.symfony.class">Oryzone\Bundle\MediaStorageBundle\Event\SymfonyEventDispatcherAdapter</parameter>
        <parameter key="oryzone_media_storage.event_dispatcher_adapter.null.class">Oryzone\MediaStorage\Events\NullEventDispatcherAdapter</parameter>
    </parameters>

    <services>
        <!-- SymfonyEventDispatcherAdapter -->
        <service id="oryzone_media_storage.event_dispatcher_adapter.symfony" class="%oryzone_media_storage.event_dispatcher_adapter.symfony.class%">
            <argument type="service" id="event_dispatcher" />
        </service>

        <!-- NullEventDispatcherAdapter -->
        <service id="oryzone_media_storage.event_dispatcher_adapter.null" class="%oryzone_media_storage.event_dispatcher_adapter.null.class%">
        </service>

        <!-- Sets SymfonyEventDispatcherAdapter as the default one -->
        <service id="oryzone_media_storage.event_dispatcher_adapter" alias="oryzone_media_storage.event_dispatcher_adapter.symfony">
        </service>
    </services>

</container>