<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oryzone_media_storage.providers.file.class">Oryzone\Bundle\MediaStorageBundle\Provider\FileProvider</parameter>
        <parameter key="oryzone_media_storage.providers.image.class">Oryzone\Bundle\MediaStorageBundle\Provider\ImageProvider</parameter>
        <parameter key="oryzone_media_storage.providers.youtube.class">Oryzone\Bundle\MediaStorageBundle\Provider\YoutubeProvider</parameter>
        <parameter key="oryzone_media_storage.providers.vimeo.class">Oryzone\Bundle\MediaStorageBundle\Provider\VimeoProvider</parameter>
        <parameter key="oryzone_media_storage.providers.image.tempDir">%kernel.cache_dir%/Oryzone/MediaStorage/temp/</parameter>
        <parameter key="oryzone_media_storage.providers.youtube.tempDir">%kernel.cache_dir%/Oryzone/MediaStorage/temp/</parameter>
        <parameter key="oryzone_media_storage.providers.vimeo.tempDir">%kernel.cache_dir%/Oryzone/MediaStorage/temp/</parameter>
    </parameters>

    <services>
        <!-- oryzone_media_storage.providers.file -->
        <service id="oryzone_media_storage.providers.file" class="%oryzone_media_storage.providers.file.class%">
            <tag name="oryzone_media_storage_provider" alias="file"/>
        </service>

        <!-- oryzone_media_storage.providers.image -->
        <service id="oryzone_media_storage.providers.image" class="%oryzone_media_storage.providers.image.class%">
            <argument>%oryzone_media_storage.providers.image.tempDir%</argument>
            <argument type="service" id="imagine" on-invalid="ignore"/>
            <tag name="oryzone_media_storage_provider" alias="image"/>
        </service>

        <!-- oryzone_media_storage.providers.youtube -->
        <service id="oryzone_media_storage.providers.youtube" class="%oryzone_media_storage.providers.youtube.class%">
            <argument>%oryzone_media_storage.providers.youtube.tempDir%</argument>
            <argument type="service" id="imagine" on-invalid="ignore"/>
            <argument type="service" id="buzz" on-invalid="ignore"/>
            <tag name="oryzone_media_storage_provider" alias="youtube"/>
        </service>

        <!-- oryzone_media_storage.providers.vimeo -->
        <service id="oryzone_media_storage.providers.vimeo" class="%oryzone_media_storage.providers.vimeo.class%">
            <argument>%oryzone_media_storage.providers.vimeo.tempDir%</argument>
            <argument type="service" id="imagine" on-invalid="ignore"/>
            <argument type="service" id="buzz" on-invalid="ignore"/>
            <tag name="oryzone_media_storage_provider" alias="vimeo"/>
        </service>

    </services>

</container>
