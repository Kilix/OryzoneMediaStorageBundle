<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oryzone_media_storage.class">Oryzone\Bundle\MediaStorageBundle\MediaStorage</parameter>
        <parameter key="oryzone_media_storage.cdn_factory.class">Oryzone\Bundle\MediaStorageBundle\Cdn\CdnFactory</parameter>
        <parameter key="oryzone_media_storage.cdn_factory.cdns" type="collection"/>
        <parameter key="oryzone_media_storage.context_factory.class">Oryzone\Bundle\MediaStorageBundle\Context\ContextFactory</parameter>
        <parameter key="oryzone_media_storage.context_factory.contexts" type="collection"/>
        <parameter key="oryzone_media_storage.provider_factory.class">Oryzone\Bundle\MediaStorageBundle\Provider\ProviderFactory</parameter>
        <parameter key="oryzone_media_storage.provider_factory.providers" type="collection"/>
        <parameter key="oryzone_media_storage.naming_strategy_factory.class">Oryzone\Bundle\MediaStorageBundle\NamingStrategy\NamingStrategyFactory</parameter>
        <parameter key="oryzone_media_storage.naming_strategy_factory.naming_strategies" type="collection"/>
    </parameters>

    <services>
        <!-- oryzone_media_storage.cdn_factory -->
        <service id="oryzone_media_storage.cdn_factory" class="%oryzone_media_storage.cdn_factory.class%">
            <argument type="service" id="service_container"/>
            <argument>%oryzone_media_storage.cdn_factory.cdns%</argument>
        </service>

        <!-- oryzone_media_storage.context_factory -->
        <service id="oryzone_media_storage.context_factory" class="%oryzone_media_storage.context_factory.class%">
            <argument type="service" id="service_container"/>
            <argument>%oryzone_media_storage.context_factory.contexts%</argument>
        </service>

        <!-- oryzone_media_storage.provider_factory -->
        <service id="oryzone_media_storage.provider_factory" class="%oryzone_media_storage.provider_factory.class%">
            <argument type="service" id="service_container"/>
            <argument>%oryzone_media_storage.provider_factory.providers%</argument>
        </service>

        <!-- oryzone_media_storage.naming_strategy_factory -->
        <service id="oryzone_media_storage.naming_strategy_factory" class="%oryzone_media_storage.naming_strategy_factory.class%">
            <argument type="service" id="service_container"/>
            <argument>%oryzone_media_storage.naming_strategy_factory.naming_strategies%</argument>
        </service>

        <!-- oryzone_media_storage -->
        <service id="oryzone_media_storage" class="%oryzone_media_storage.class%">
            <argument type="service" id="oryzone_media_storage.cdn_factory" />
            <argument type="service" id="oryzone_media_storage.context_factory" />
            <argument type="service" id="knp_gaufrette.filesystem_map" />
            <argument type="service" id="oryzone_media_storage.provider_factory" />
            <argument type="service" id="oryzone_media_storage.naming_strategy_factory" />
            <argument>%oryzone_media_storage.default_cdn%</argument>
            <argument>%oryzone_media_storage.default_context%</argument>
            <argument>%oryzone_media_storage.default_filesystem%</argument>
            <argument>%oryzone_media_storage.default_provider%</argument>
            <argument>%oryzone_media_storage.default_naming_strategy%</argument>
        </service>
    </services>

</container>
